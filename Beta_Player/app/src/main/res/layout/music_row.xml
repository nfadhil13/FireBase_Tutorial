<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/music_item_imageview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        tools:srcCompat="@tools:sample/avatars[3]" />

        <LinearLayout
            android:layout_toEndOf="@+id/music_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/music_item_tv_btn"
            >

            <TextView
                android:ellipsize="end"
                android:textSize="22sp"
                android:text="Title"
                android:layout_marginStart="20dp"
                android:id="@+id/music_item_tv_title"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:text="Post by andia"
                android:layout_marginStart="20dp"
                android:id="@+id/music_item_tv_post_by"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/music_item_tv_btn"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=":"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            />




</RelativeLayout>